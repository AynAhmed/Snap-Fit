<!-- app/views/goals/_form.html.erb -->
<div>Welcome <%= current_user.first_name.capitalize %>!</div>

<%= form_with(model: goal, url: goals_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :goal_type %>
    <%= form.select :goal_type, ['Lose weight', 'Gain weight', 'Maintain weight', 'Gain muscle'] %>
  </div>

  <div class="field">
    <%= form.label :target_value %>
    <%= form.text_field :target_value %>
  </div>

  <div class="field">
    <%= form.label :current_value %>
    <%= form.text_field :current_value %>
  </div>

  <div class="field">
    <%= form.label :daily_calorie_goal %>
    <%= form.text_field :daily_calorie_goal %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
